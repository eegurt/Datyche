@model Datyche.Models.Post;

@{
    ViewData["Title"] = "Create Post";
}

<h1>Create post</h1>
<div class="d-flex">
    <form class="d-flex flex-column" asp-controller="Post" asp-action="Create" asp-antiforgery="true" method="post" enctype="multipart/form-data">
        <div>
            <label asp-for="Title">Title</label>
            <input class="d-block" type="text" asp-for="Title">
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <label>Description</label>
            <input class="d-block" asp-for="Description">
        </div>
        <div class="mt-3">
            <label>Files</label>
            <input asp-for="Files" type="file" class="d-block" multiple>
        </div>
        <input type="submit" class="btn-primary mt-3" value="Create">
    </form>
</div>

@section Scripts
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}