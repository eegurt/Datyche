@model Datyche.Models.PostViewModel

@{
    ViewData["Title"] = $"{Model.Author} - {Model.Title}";
}

<div class="container">
    <div class="post row">
		@if (Model.Files!.Count > 0)
		{
        <div class="media-container col-sm-8">
            <div id="postCarousel" class="carousel slide" data-bs-ride="carousel" style="height: 600px; border: 1px solid rgba(0, 0, 0, 1);">
                <div class="carousel-inner h-100 w-100">
					<div class="carousel-item active h-100 w-100">
						<img src="~/media/@Model.Files[0].Name" class="h-100 w-100" alt="" style="object-fit: contain;">
					</div>
					@for (int i = 1; i < Model.Files.Count; i++)
					{
					<div class="carousel-item h-100 w-100">
						<img src="~/media/@Model.Files[i].Name" class="h-100 w-100" alt="" style="object-fit: contain;">
					</div>
					}
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#postCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true" style="filter: invert()"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#postCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true" style="filter: invert()"></span>
                    <span class="visually-hidden">Next</span>
                </button>
                <div class="carousel-indicators">
                    <button
                        type="button"
                        data-bs-target="#postCarousel"
                        data-bs-slide-to="0"
                        class="active"
                        aria-current="true"
                        aria-label="Slide 1">
                    </button>
                    <button
                        type="button"
                        data-bs-target="#postCarousel"
                        data-bs-slide-to="1"
                        aria-label="Slide 2">
                    </button>
                    <button
                        type="button"
                        data-bs-target="#postCarousel"
                        data-bs-slide-to="2"
                        aria-label="Slide 3">
                    </button>
                </div>
            </div>
        </div>
		}
        <div class="body-container col-sm-4">
            <h1>@Model.Title</h1>
            <p>@Model.Description</p>
            <p>Author: <strong>@Model.Author</strong></p>
            <p>Published: <strong>@Model.DateCreated</strong></p>
        </div>
    </div>
</div>
<div>
	<a asp-action="Index">Back to List</a> |
	<a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
	<a asp-action="Delete" asp-route-id="@Model?.Id">Delete</a>
</div>
